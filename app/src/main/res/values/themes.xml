<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeLiquid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom styling of the AlertDialog. -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/red</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textColorPrimary">@color/green</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Styling the OK (positive) and Cancel (negative) buttons of the AlertDialog -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NegativeButtonStyle</item>


        <!-- Styling the size of the AlertDialog in terms of the screen size -->
        <item name="windowMinWidthMajor">70%</item>
        <item name="windowMinWidthMinor">70%</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">

        <!-- Background color of the login dialog -->
        <item name="android:windowBackground">@color/white</item>

        <item name="colorControlNormal">@color/purple_500</item>

        <item name="android:textColorHint">@color/purple_500</item>

        <!-- Underline and Hint of the edittext -->
        <item name="colorControlActivated">@color/purple_700</item>

        <!-- Top bar color of the login dialog -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>

        <!-- Typed in text color into the edittext -->
        <item name="android:textColorPrimary">@color/purple_700</item>

        <item name="android:textColor">@color/purple_700</item>

        <item name="android:textColorLink">@color/purple_700</item>

        <!-- Remove the action bar from the login dialog -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!-- Custom styling of the Trouble signing in link -->
    <style name="FirebaseUI.Text.Link">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>
</resources>